#
# Design Browser windows
#
if {[catch {window new WatchList -name "Design Browser 1" -geometry 730x500+261+33}] != ""} {
    window geometry "Design Browser 1" 730x500+261+33
}
window target "Design Browser 1" on
browser using {Design Browser 1}
browser set -scope  simulator::instr_fetch_test 
browser set \
    -signalsort name
browser yview see  simulator::instr_fetch_test 
browser timecontrol set -lock 0

#
# Waveform windows
#
if {[catch {window new WaveWindow -name "Waveform 1" -geometry 1010x600+-10+19}] != ""} {
    window geometry "Waveform 1" 1010x600+-10+19
}
window target "Waveform 1" on
waveform using {Waveform 1}
waveform sidebar visibility partial
waveform set \
    -primarycursor TimeA \
    -signalnames name \
    -signalwidth 175 \
    -units ps \
    -valuewidth 75
waveform baseline set -time 0

set id [waveform add -signals  {
	simulator::instr_fetch_test.clk
	} ]
set id [waveform add -signals  {
	{simulator::instr_fetch_test.imm16[15:0]}
	} ]
set id [waveform add -signals  {
	{simulator::instr_fetch_test.instruction[31:0]}
	} ]
set id [waveform add -signals  {
	simulator::instr_fetch_test.npc_sel
	} ]
set id [waveform add -signals  {
	{simulator::instr_fetch_test.pc[31:0]}
	} ]

waveform xview limits 38000ps 40000ps

